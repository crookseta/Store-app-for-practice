<Window x:Class="Store.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Connect" Height="150" Width="250">
    <Grid>
        <Label VerticalAlignment="Stretch" HorizontalAlignment="Center">Requieres connection string!!!</Label>
        <TextBox x:Name="ConnectionStringBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="15,0,15,0" />
        <Button x:Name="ConnectionButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="80" Height="25" Margin="0,0,0,10" Click="ConnectionButton_Click">Connect</Button>
    </Grid>
</Window>
